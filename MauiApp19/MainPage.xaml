<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:Class="MauiApp19.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            WidthRequest="600"
            HorizontalOptions="Center">
            <Label
                Text="Formularz wizyty u lekarza!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Picker x:Name="RodzajLekarza" Title="Wybierz rodzaj lekarza" HorizontalOptions="Center" WidthRequest="300">
                <Picker.Items>
                    <x:String>Internisty</x:String>
                    <x:String>Kardiologa</x:String>
                    <x:String>Dermatologa</x:String>
                    <x:String>Okulisty</x:String>
                </Picker.Items>
            </Picker>
            <DatePicker Format="dd.MM.yyyy" x:Name="Data" MinimumDate="{x:Static system:DateTime.Today}" HorizontalOptions="Center" WidthRequest="150"/>
            <TimePicker Format="HH:mm" x:Name="Godzina" HorizontalOptions="Center"/>
            <Button
                x:Name="AlertButton"
                Text="Zarezerwuj" 
                Clicked="OnAlertClicked"
                HorizontalOptions="Fill"
                WidthRequest="300"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
